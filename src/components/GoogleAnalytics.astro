---
const { gtagId } = Astro.props;
const url="https://www.googletagmanager.com/gtag/js?id="+gtagId;
---

<!-- Global site tag (gtag.js) - Google Analytics -->
<script
  is:inline
  async
  src={url}>
</script>

<script is:inline
define:vars={{gtagId}}
>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());
  tag("config", gtagId );
  
</script>
